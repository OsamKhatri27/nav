<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/viewPager">

    </androidx.viewpager.widget.ViewPager>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="2"
        android:background="@color/colorAccent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"

                >

                <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="19dp"
                    android:layout_weight="1"

                    app:cardCornerRadius="9dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:id="@+id/health"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:onClick="health"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/health" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="HEALTH"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />
                    </LinearLayout>

                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="19dp"
                    app:cardCornerRadius="9dp"
                    app:cardElevation="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/pedometer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:onClick="notice"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/pedometer" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="PEDOMETER"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />
                    </LinearLayout>

                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="19dp"
                    app:cardCornerRadius="9dp"
                    app:cardElevation="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/stetho"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:onClick="stetho"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/stetho" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="STETHO"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />
                    </LinearLayout>

                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="19dp"
                    app:cardCornerRadius="9dp"
                    app:cardElevation="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/yoga"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:onClick="yoga"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/yog" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="YOGA"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />
                    </LinearLayout>

                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>